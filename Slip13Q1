Write a PHP script to create a chess board using CSS on table cells
///////////////////////////////////////////////////////////////////
by php

<html> 
<head> 
<head><title>ChessBoard</title> 
<style> 
.clr1 
{ 
 background-color:black; 
} 
.clr2 
{ 
 background-color:white; 
} 
table 
{ 
 width:100%; 
 height:100%; 
} 
</style> 
<?php 
echo"<table border=1>"; 
for($i=1;$i<=8;$i++) 
{ 
 echo"<tr>"; 
 if($i%2==0) 
 { 
 for($j=1;$j<=8;$j++) 
 { 
 if($j%2==1) 
 echo"<td class=clr2></td>"; 
 else 
 echo"<td class=clr1></td>"; 
 } 
 } 
 else 
 { 
 for($j=0;$j<8;$j++) 
 { 
 if($j%2==0) 
 echo"<td class=clr1></td>"; 
 else 
 echo"<td class=clr2></td>"; 
 } 
 
 } 
 echo "</tr>"; 
} 
echo"</table>" ; 
?> 
</html> 
//////////////////////////////////////////////////////////



<html> 
 
 <body> 
 <h3>Chess Board using Nested For Loop</h3> 
 <table width="270px" cellspacing="0px" cellpadding="0px" border="1px"> 
 
 <?php 
 for($row=1;$row<=8;$row++) 
 { 
 echo "<tr>"; 
 for($col=1;$col<=8;$col++) 
 { 
 $total=$row+$col; 
 if($total%2==0) 
 { 
 echo "<td height=30px width=30px bgcolor=white></td>"; 
 } 
 else 
 { 
 echo "<td height=30px width=30px bgcolor=black></td>"; 
 } 
 } 
 echo "</tr>"; 
 } 
 ?> 
 </table> 
 </body> 
 </html>
